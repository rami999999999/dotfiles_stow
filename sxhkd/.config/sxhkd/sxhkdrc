## sxhkdrc

# terminal
super + Return
  alacritty 

super+shift+Return
    bspc rule -a \* -o state=floating rectangle=1000x500+0+0 center=true && termite -e 'tmux at -t float'

# rofi applications menu
super + space
  rofi -show combi -normal-window

# rofi launcher
super + d
  rofi -show drun

# switch, move window
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}
# close window
super + q
  bspc node -c
# rotate 180
super + h
  bspc node @/ --rotate 180
# focus or move window to desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

# tile/monocle toggle
super + m
  bspc desktop -l next
# tile/float/fullscreen toggle
super + {_,shift + }t
  bspc node -t {_,pseudo_}tiled
super + {_,shift + }f
  bspc node -t {floating,fullscreen}
# move next/prev ws
super + bracket{left,right}
  bspc desktop -f {prev,next}.local

# screen/window/selection shot
super + {_,shift +,ctrl +} + @Print
  scrot {_,-u,-s} -e "notify-send 'scrot' 'image saved as \n\$f'"

# clipboard select
super + Insert
  clipmenu
super + shift + Insert
  clipdel -d '.*'

# reload keybindings
super + shift + r
  ~/.local/bin/reload


#focus on mouse click
~button1
  bspc pointer -g focus

#move on mouse drag
alt + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

alt + @button{1-3}
    bspc pointer -u

alt + !button{1-3}                                                            
    bspc pointer -t %i %i                                                       


#
# move/resize
#

super + r
    bspc node @parent -R 90

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
ctr + alt + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

meta + -
    tdrop -ma -w -4 -y "$PANEL_HEIGHT" -s dropdown urxvt
